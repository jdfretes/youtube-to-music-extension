{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "YouTube Music Redirector",
    "version": "1.0.0",
    "manifest_version": 3,
    "author": "Juan Fretes",
    "description": "Automatically redirects YouTube video pages to YouTube Music for a seamless music listening experience.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_title": "YouTube Music Redirector"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}